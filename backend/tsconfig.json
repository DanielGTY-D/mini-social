{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true, // estoy habilita los decoradores en typescript
    "emitDecoratorMetadata": true, // esto habilita los metadatos de los decoradores de typescript
  },
  "include": ["src/**/*.ts"]
}
